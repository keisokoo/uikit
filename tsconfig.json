{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["src", "typings.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "scripts/**/*"],
}
